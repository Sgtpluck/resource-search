<li class="usa-card">
  <div class="usa-card__container">
    <header class="usa-card__header">
      <h2 class="usa-card__heading">
      <%= link_to result.name, sanitize(result.url), target: "_blank" %></h2>
    </header>
    <div class="usa-card__body">
      <p> <%= result.description %> </p>
      <div>
        <%= image_tag "uswds/dist/img/usa-icons/folder_open.svg", "aria-hidden": true %>
        <%= result.resource_type %>
      </div>
      <% if result.file_type? %>
        <div>
          <%= image_tag "uswds/dist/img/usa-icons/file_present.svg", "aria-hidden": true %>
          <%= result.file_type %>
        </div> 
      <% end %>
    </div>
    <div class="usa-card__footer">
    </div>
  </div>
</li>